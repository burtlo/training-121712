<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% [ :notice, :error, :warning ].each do |level| %>
  <% if flash.key?(level) %>
    <p class="flash">
      <%= flash[level] %>
    </p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
